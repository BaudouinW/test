{% extends 'base.html.twig' %}

{% block title %}{{ 'payment_title'|trans }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 text-center p-4 bg-success bg-gradient text-white">
                <h3 data-payment-title>{{ 'payment_title'|trans }}</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-12 p-3">
                <a href="{{ path('app_basket') }}" class="btn btn-success" role="button">
                    {{ 'return_button_label'|trans }}
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-12 text-center">
                <img src="{{ asset('images/payment.gif') }}" alt="payment">
            </div>
        </div>
    </div>
{% endblock %}
